<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/preview_width"
    android:layout_height="@dimen/preview_height"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    android:paddingBottom="0sp"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context="com.kc3c2016.myivc.activity.VectorActivity">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="@dimen/preview_width"
        android:layout_height="@dimen/preview_height">

        <FrameLayout
            android:id="@+id/preview_frame6"
            android:layout_width="@dimen/preview_width"
            android:layout_height="@dimen/preview_height"
            android:layout_gravity="center" >

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="370sp">
            <TextView
                android:id="@+id/textView_info_vedio6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginTop="400sp"
            android:layout_marginLeft="0sp">
            <ImageButton
                android:id="@+id/button_dash6"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:background="@mipmap/main_6"/>
        </FrameLayout>
        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="800sp"
            android:layout_height="810sp"
            android:layout_marginTop="-80sp"
            android:layout_marginLeft="0sp">
            <ImageButton
                android:id="@+id/button_touch6"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:background="@mipmap/t_touch" />
            <ImageButton
                android:id="@+id/vector1"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:background="@mipmap/t_dash" />
            <ImageButton
                android:id="@+id/vector2"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:background="@mipmap/t_dash" />
            <ImageButton
                android:id="@+id/vector3"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:background="@mipmap/t_dash" />
        </FrameLayout>

    </FrameLayout>
</ScrollView>

